.archives-wrap
  position relative
  margin: 2rem 0  // 上下外边距
  padding: 1rem  // 内边距
  background-color: #f9f9f9  // 背景颜色
  border-radius: 5px  // 圆角边框

.archive-year-wrap
  position relative
  padding-top: 1rem

.archive-year
  display inline-block
  text-decoration none
  font-size: 1.5em  // 字体大小
  color: #333  // 颜色
  font-weight: bold

.archives
  @extend $base-style

.archive-article
  margin-bottom: 1rem  // 每个文章项底部间距
  padding: 0.5rem  // 内边距
  list-style: none  // 移除默认的列表样式
  font-size: 1em  // 确保字体大小一致
  line-height: 1.2  // 设置行间距为普通

  &:before
    content: "•"  // 使用 bullet 符号
    font-size: 1.2em  // Bullet 大小
    color: black  // Bullet 颜色为黑色
    font-weight: bold  // Bullet 加粗
    position: absolute  // 绝对定位
    left: -1.5em  // Bullet 左移
    top: 50%  // 垂直居中
    transform: translateY(-50%)  // 调整 Bullet 垂直居中

  // 日期部分
  .archive-article-date
    font-size: 1.1em  // 增大日期的字体大小
    color: #666  // 日期颜色
    margin-right: 1rem  // 日期和标题间隔
  
  // 标题部分
  .archive-article-title
    display: inline-block  // 使标题为块元素
    text-decoration: underline  // 添加下划线
    color: black  // 标题颜色为黑色
    cursor: pointer  // 鼠标悬停时显示为指针
    font-size: 1.1em  // 确保标题字体大小一致
    &:hover
      color: #0056b3  // 悬停时改变颜色
      text-decoration: underline  // 悬停时保留下划线

.archive-article-footer
  margin-top: 1rem

.archive-article-inner
  .article-tag-list
    padding: 0
    margin: 0
